{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "\"Nossa biblioteca do curso de JS com TDD na pr√°tica.\"",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "reporter": ["text", "html"],
    "excludes": ["tests/**"]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhrmefp/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Guilherme Fernandes Pereira (https://github.com/guilhrmefp)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guilhrmefp/js-tdd-course/issues"
  },
  "homepage": "https://github.com/guilhrmefp/js-tdd-course#readme",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0"
  }
}
